    "finding_classification": {
        "critical": {
            "impact_level": "high",
            "description": "Significant deficiency in security posture, high likelihood of exploitation, major business impact.",
            "remediation_sla_days": 15,
            "requires_compensating_control": false,
            "example": "Lack of critical vulnerability patching, absence of MFA for privileged access."
        },
        "high": {
            "impact_level": "medium",
            "description": "Notable weakness that could lead to compromise under certain conditions, moderate business impact.",
            "remediation_sla_days": 45,
            "requires_compensating_control": true,
            "example": "Inconsistent access reviews, inadequate logging for key systems."
        },
        "medium": {
            "impact_level": "low",
            "description": "Minor weakness or deviation from best practice, low potential for direct exploitation.",
            "remediation_sla_days": 90,
            "requires_compensating_control": false,
            "example": "Outdated documentation, minor configuration drift from baseline."
        },
        "low": {
            "impact_level": "informational",
            "description": "Opportunity for improvement or minor documentation issue.",
            "remediation_sla_days": 120,
            "requires_compensating_control": false,
            "example": "Slightly outdated policy wording, suggestion for process optimization."
        }
    },
    "remediation_requirements": {
        "critical": {
            "approval_required": [
                "ciso",
                "system_owner"
            ],
            "documentation": [
                "root_cause_analysis",
                "corrective_action_plan",
                "validation_testing"
            ],
            "validation_method": "independent_verification"
        },
        "high": {
            "approval_required": [
                "security_manager",
                "system_owner"
            ],
            "documentation": [
                "remediation_plan",
                "implementation_evidence"
            ],
            "validation_method": "internal_review"
        },
        "medium": {
            "approval_required": [
                "team_lead"
            ],
            "documentation": [
                "action_plan"
            ],
            "validation_method": "self_attestation_with_evidence"
        },
        "low": {
            "approval_required": [
                "individual_responsible"
            ],
            "documentation": [
                "confirmation_of_update"
            ],
            "validation_method": "self_attestation"
        }
    },
    "assessment_controls": {
        "authentication": {
            "password_policy": {
                "min_length": 12,
                "complexity_requirements": [
                    "uppercase",
                    "lowercase",
                    "numbers",
                    "special_chars"
                ],
                "history_count": 12,
                "max_age_days": 90
            },
            "mfa": {
                "required": true,
                "approved_methods": [
                    "app",
                    "hardware_token"
                ],
                "required_for": [
                    "remote_access",
                    "privileged_access",
                    "sensitive_data_access"
                ]
            }
        },
        "encryption": {
            "data_at_rest": {
                "required": true,
                "algorithms": [
                    "AES-256"
                ]
            },
            "data_in_transit": {
                "required": true,
                "protocols": [
                    "TLS 1.2",
                    "TLS 1.3"
                ]
            }
        },
        "audit_logging": {
            "required_events": [
                "authentication_attempts",
                "authorization_changes",
                "privileged_actions",
                "security_configuration_changes",
                "incident_detection_events"
            ],
            "retention_period_days": 365,
            "protected_integrity": true,
            "review_frequency_days": 30
        },
        "vulnerability_management": {
            "scan_frequency_days": 30,
            "patch_critical_sla_days": 14,
            "patch_high_sla_days": 30
        },
        "access_control": {
            "principle_of_least_privilege": true,
            "access_review_frequency_days": 90
        }
    },
    "testing_requirements": {
        "security_control_testing": {
            "frequency_months": 12,
            "scope": "key_security_controls"
        },
        "incident_response_testing": {
            "frequency_months": 12,
            "methodology": [
                "tabletop_exercise",
                "simulation"
            ]
        },
        "recovery_plan_testing": {
            "frequency_months": 12,
            "scope": "critical_systems"
        }
    },
    "attestation_requirements": {
        "risk_assessment_review": {
            "frequency_months": 12,
            "approval_required": [
                "management"
            ]
        },
        "policy_review": {
            "frequency_months": 12,
            "approval_required": [
                "management"
            ]
        },
        "security_awareness_effectiveness": {
            "frequency_months": 12,
            "documentation_required": true
        }
    }
