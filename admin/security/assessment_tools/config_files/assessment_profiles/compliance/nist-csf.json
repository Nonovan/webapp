    "assessment": {
        "scope": {
            "include": [
                "asset_management",
                "risk_assessment",
                "access_control",
                "data_security",
                "protective_technology",
                "anomaly_detection",
                "security_monitoring",
                "incident_response",
                "recovery_planning",
                "communications"
            ],
            "exclude": [
