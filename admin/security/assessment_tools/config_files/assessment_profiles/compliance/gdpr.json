    "assessment_controls": {
        "data_protection": {
            "encryption_at_rest": {
                "required_for_personal_data": true,
                "algorithms": [
                    "AES-256"
                ],
                "key_management": "documented_process_with_access_control"
            },
            "encryption_in_transit": {
                "required_for_personal_data": true,
                "protocols": [
                    "TLS 1.2",
                    "TLS 1.3"
                ],
                "prohibited_protocols": [
                    "SSL",
                    "TLS 1.0",
                    "TLS 1.1"
                ]
            },
            "pseudonymisation": {
                "techniques_evaluated": true,
                "applied_where_appropriate": true,
                "recommended_methods": [
                    "tokenization",
                    "hashing",
                    "partial_masking"
                ]
            },
            "data_minimization": {
                "collection_limited_to_purpose": true,
                "retention_policy_enforced": true,
                "deletion_mechanisms_required": true
            },
            "special_category_data": {
                "additional_safeguards_required": true,
                "lawful_basis_documented": true,
                "access_logging_enhanced": true
            }
        },
        "access_control": {
            "role_based_access_for_personal_data": true,
            "least_privilege_applied": true,
            "access_review_frequency_days": 90,
            "privileged_access_additional_controls": true,
            "password_requirements": {
                "min_length": 12,
                "complexity": true,
                "expiration_days": 90
            },
            "mfa_requirements": {
