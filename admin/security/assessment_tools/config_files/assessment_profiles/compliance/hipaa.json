    "finding_classification": {
        "critical": {
            "compliance_impact": "direct_violation",
            "description": "Finding directly violates a HIPAA Security Rule requirement with potential for unauthorized access to PHI",
            "remediation_sla_days": 15,
            "requires_compensating_control": false,
            "example": "Unencrypted PHI transmission, lack of access controls"
        },
        "high": {
            "compliance_impact": "significant_weakness",
            "description": "Finding represents a significant weakness in compliance with potential for security incidents",
            "remediation_sla_days": 30,
            "requires_compensating_control": true,
            "example": "Inadequate audit controls, weak authentication mechanisms"
        },
        "medium": {
            "compliance_impact": "partial_compliance",
            "description": "Finding indicates partial compliance with a requirement needing improvement",
            "remediation_sla_days": 60,
            "requires_compensating_control": true,
            "example": "Incomplete policies, inconsistent security practices"
        },
        "low": {
            "compliance_impact": "documentation_issue",
            "description": "Finding related to documentation or process improvements",
            "remediation_sla_days": 90,
            "requires_compensating_control": false,
            "example": "Outdated policies, minor documentation gaps"
        }
    },
    "remediation_requirements": {
        "critical": {
            "approval_required": [
                "security_officer",
                "compliance_officer",
                "executive_management"
            ],
            "documentation": [
                "remediation_plan",
                "testing_results",
                "post_implementation_verification"
            ],
            "validation_method": "independent_verification"
        },
        "high": {
            "approval_required": [
                "security_officer",
                "compliance_officer"
            ],
            "documentation": [
                "remediation_plan",
                "testing_results"
            ],
            "validation_method": "security_team_verification"
        },
        "medium": {
            "approval_required": [
                "security_manager"
            ],
            "documentation": [
                "remediation_plan"
            ],
            "validation_method": "self_attestation_with_evidence"
        },
        "low": {
            "approval_required": [
                "department_manager"
            ],
            "documentation": [
                "update_confirmation"
            ],
            "validation_method": "self_attestation"
        }
    },
    "assessment_controls": {
        "authentication": {
            "password_policy": {
                "min_length": 12,
                "complexity_requirements": [
                    "uppercase",
                    "lowercase",
                    "numbers",
                    "special_chars"
                ],
                "history_count": 24,
                "max_age_days": 60
            },
            "mfa": {
                "required": true,
                "approved_methods": [
                    "app",
                    "hardware_token",
                    "sms"
                ],
                "required_for": [
                    "remote_access",
                    "privileged_actions",
                    "phi_access"
                ]
            }
        },
        "encryption": {
            "data_at_rest": {
                "required": true,
                "algorithms": [
                    "AES-256",
                    "AES-192"
                ],
                "key_management": "centralized"
            },
            "data_in_transit": {
                "required": true,
                "protocols": [
                    "TLS 1.2",
                    "TLS 1.3"
                ],
                "prohibited_protocols": [
                    "SSL",
                    "TLS 1.0",
                    "TLS 1.1"
                ]
            }
        },
        "audit_logging": {
            "required_events": [
                "authentication_attempts",
                "authorization_changes",
                "phi_access",
                "phi_modification",
                "configuration_changes",
                "security_incidents"
            ],
            "retention_period_days": 365,
            "protected_integrity": true,
            "review_frequency_days": 30
        },
        "backup_recovery": {
            "backup_frequency": "daily",
            "encryption_required": true,
            "offsite_storage": true,
            "testing_frequency_months": 6
        },
        "incident_response": {
            "plan_required": true,
            "breach_notification_process": true,
            "response_team_identified": true,
            "exercise_frequency_months": 12
        },
        "access_control": {
            "principle_of_least_privilege": true,
            "role_based_access": true,
            "access_review_frequency_days": 90,
            "automatic_logoff_minutes": 15
        },
        "vulnerability_management": {
            "scan_frequency_days": 30,
            "patch_critical_sla_days": 15,
            "patch_high_sla_days": 30
        }
    },
    "testing_requirements": {
        "security_controls_testing": {
            "frequency_months": 12,
            "scope": "all_technical_controls",
            "methodology": [
                "automated_testing",
                "manual_validation"
            ]
        },
        "penetration_testing": {
            "frequency_months": 12,
            "scope": "phi_systems",
            "methodology": [
                "external_testing",
                "internal_testing"
            ]
        },
        "security_awareness": {
            "training_frequency_months": 12,
            "phishing_simulation_frequency_months": 3
        }
    },
    "attestation_requirements": {
        "security_risk_analysis": {
            "frequency_months": 12,
            "documentation_required": true,
            "approval_required": [
                "security_officer",
                "executive_management"
            ]
        },
        "contingency_plan_testing": {
            "frequency_months": 12,
            "documentation_required": true
        },
        "policy_review": {
            "frequency_months": 12,
            "documentation_required": true
        }
    }
}
