    "finding_classification": {
        "critical": {
            "compliance_impact": "major_nonconformity",
            "description": "Absence of, or failure to implement and maintain, one or more required management system elements, or a situation which would raise significant doubt about the capability of the ISMS to achieve its intended outcomes.",
            "remediation_sla_days": 30,
            "requires_compensating_control": false,
            "example": "No risk assessment process, lack of management commitment"
        },
        "high": {
            "compliance_impact": "minor_nonconformity",
            "description": "A single observed lapse or non-fulfillment of one requirement of the standard, policy, process or procedure.",
            "remediation_sla_days": 60,
            "requires_compensating_control": true,
            "example": "Inconsistent application of access control policy, outdated procedure"
        },
        "medium": {
            "compliance_impact": "opportunity_for_improvement",
            "description": "A situation where evidence suggests a potential weakness or opportunity for enhancement in the ISMS.",
            "remediation_sla_days": 90,
            "requires_compensating_control": false,
            "example": "Policy could be clearer, process could be more efficient"
        },
        "low": {
            "compliance_impact": "observation",
            "description": "A statement of fact made during an audit and substantiated by objective evidence.",
            "remediation_sla_days": 120,
            "requires_compensating_control": false,
            "example": "Minor documentation inconsistency"
        }
    },
    "remediation_requirements": {
        "critical": {
            "approval_required": [
                "ciso",
                "executive_management"
            ],
            "documentation": [
                "root_cause_analysis",
                "corrective_action_plan",
                "effectiveness_verification"
            ],
            "validation_method": "independent_audit"
        },
        "high": {
            "approval_required": [
                "security_manager",
                "process_owner"
            ],
            "documentation": [
                "correction_plan",
                "implementation_evidence"
            ],
            "validation_method": "internal_review"
        },
        "medium": {
            "approval_required": [
                "team_lead"
            ],
            "documentation": [
                "improvement_plan"
            ],
            "validation_method": "self_attestation_with_evidence"
        },
        "low": {
            "approval_required": [
                "individual_responsible"
            ],
            "documentation": [
                "update_confirmation"
            ],
            "validation_method": "self_attestation"
        }
    },
    "assessment_controls": {
        "authentication": {
            "password_policy": {
                "min_length": 12,
                "complexity_requirements": [
                    "uppercase",
                    "lowercase",
                    "numbers",
                    "special_chars"
                ],
                "history_count": 12,
                "max_age_days": 90
            },
            "mfa": {
                "required": true,
                "approved_methods": [
                    "app",
                    "hardware_token"
                ],
                "required_for": [
                    "remote_access",
                    "privileged_access",
                    "cloud_management_console"
                ]
            },
            "session_management": {
                "timeout_minutes": 30,
                "reauthentication_for_sensitive_actions": true
            }
        },
        "encryption": {
            "data_at_rest": {
                "required": true,
                "algorithms": [
                    "AES-256"
                ],
                "key_management": "documented_process_with_access_control"
            },
            "data_in_transit": {
                "required": true,
                "protocols": [
                    "TLS 1.2",
                    "TLS 1.3"
                ],
                "prohibited_protocols": [
                    "SSL",
                    "TLS 1.0",
                    "TLS 1.1"
                ]
            }
        },
        "audit_logging": {
            "required_events": [
