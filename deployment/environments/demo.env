# Demo environment settings
ENVIRONMENT=demo
DEBUG=false
LOG_LEVEL=INFO

# Database connection for demo
DATABASE_URL=${DEMO_DATABASE_URL}
REDIS_URL=${DEMO_REDIS_URL}

# Security settings
SESSION_COOKIE_SECURE=true
CSRF_PROTECTION=true
PERMANENT_SESSION_LIFETIME=3600

# Limited cloud provider credentials for demo
AWS_ACCESS_KEY_ID=${DEMO_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${DEMO_AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=us-west-2

AZURE_SUBSCRIPTION_ID=${DEMO_AZURE_SUBSCRIPTION_ID}
AZURE_TENANT_ID=${DEMO_AZURE_TENANT_ID}
AZURE_CLIENT_ID=${DEMO_AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET=${DEMO_AZURE_CLIENT_SECRET}

GCP_PROJECT_ID=demo-project
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/opt/demo/cloud-platform/instance/gcp-credentials.json

# Feature flags
FEATURE_DARK_MODE=true
FEATURE_ICS_CONTROL=true
FEATURE_CLOUD_MANAGEMENT=true
FEATURE_MFA=true

# ICS settings - demo mode with simulated data
ICS_ENABLED=true
ICS_MONITOR_INTERVAL=60
ICS_ALERT_THRESHOLD=0.8
ICS_SIMULATION_MODE=true  # Use simulated data instead of real ICS connections
ICS_RESTRICTED_IPS=${DEMO_ICS_RESTRICTED_IPS}

# Security settings
SECURITY_CHECK_FILE_INTEGRITY=true
FILE_INTEGRITY_CHECK_INTERVAL=14400  # 4 hours

# Demo mode settings
FLASK_ENV=production
FLASK_DEBUG=0
DEMO_ACCOUNT_RESET_INTERVAL=86400  # Reset demo accounts daily
DEMO_MODE=true  # Enable demo-specific features and restrictions

# Webhooks with limited retries
WEBHOOK_MAX_RETRIES=2
WEBHOOK_RETRY_DELAY=30

# Rate limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100/hour  # More restrictive for demo
RATELIMIT_STORAGE_URL=${DEMO_REDIS_URL}