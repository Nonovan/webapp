# Staging environment settings - EXAMPLE FILE
# Copy this file to staging.env and customize as needed

# Core settings
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Database connection - use environment variables in staging
DATABASE_URL=${STAGING_DATABASE_URL}
REDIS_URL=${STAGING_REDIS_URL}

# Security settings
SECRET_KEY=${STAGING_SECRET_KEY}
JWT_SECRET_KEY=${STAGING_JWT_SECRET_KEY}
CSRF_SECRET_KEY=${STAGING_CSRF_SECRET_KEY}
SESSION_COOKIE_SECURE=true
CSRF_PROTECTION=true
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Cloud provider credentials - use environment variables in staging
AWS_ACCESS_KEY_ID=${STAGING_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${STAGING_AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=${STAGING_AWS_DEFAULT_REGION}

AZURE_SUBSCRIPTION_ID=${STAGING_AZURE_SUBSCRIPTION_ID}
AZURE_TENANT_ID=${STAGING_AZURE_TENANT_ID}
AZURE_CLIENT_ID=${STAGING_AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET=${STAGING_AZURE_CLIENT_SECRET}

GCP_PROJECT_ID=staging-project
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/opt/staging/cloud-platform/instance/gcp-credentials.json

# Feature flags
FEATURE_DARK_MODE=true
FEATURE_ICS_CONTROL=true
FEATURE_CLOUD_MANAGEMENT=true
FEATURE_MFA=true

# ICS settings
ICS_ENABLED=true
ICS_MONITOR_INTERVAL=60
ICS_ALERT_THRESHOLD=0.8
ICS_RESTRICTED_IPS=${STAGING_ICS_RESTRICTED_IPS}

# Security settings
SECURITY_CHECK_FILE_INTEGRITY=true
FILE_INTEGRITY_CHECK_INTERVAL=14400  # 4 hours

# Staging application settings
FLASK_ENV=staging
FLASK_DEBUG=0
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.2

# Disable debug toolbar
DEBUG_TB_ENABLED=false

# Webhooks
WEBHOOK_ENABLED=true
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=60

# Email settings
MAIL_SERVER=${STAGING_MAIL_SERVER}
MAIL_PORT=${STAGING_MAIL_PORT}
MAIL_USERNAME=${STAGING_MAIL_USERNAME}
MAIL_PASSWORD=${STAGING_MAIL_PASSWORD}
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_DEFAULT_SENDER=${STAGING_MAIL_DEFAULT_SENDER}

# Rate limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=300/hour
RATELIMIT_STORAGE_URL=${STAGING_REDIS_URL}

# Static asset settings
STATIC_FOLDER=/var/www/staging-cloud-platform/static
UPLOAD_FOLDER=/var/www/staging-cloud-platform/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Content security policy
CSP_ENABLED=true
CSP_REPORT_ONLY=true  # Report-only mode in staging
CSP_REPORT_URI=/api/security/csp-report

# SSL/TLS settings
SSL_CERT_PATH=/etc/ssl/certs/staging-cloud-platform.crt
SSL_KEY_PATH=/etc/ssl/private/staging-cloud-platform.key

# Cache settings
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=${STAGING_REDIS_URL}
CACHE_DEFAULT_TIMEOUT=600